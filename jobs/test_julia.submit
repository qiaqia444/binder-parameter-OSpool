# Test HTCondor submit file to verify Julia container works

universe              = vanilla
executable            = test_julia.sh

# Send only what the job needs
transfer_input_files  = ../Project.toml, ../Manifest.toml

should_transfer_files   = YES
when_to_transfer_output = ON_EXIT

# Logs (on submit node)
output                = logs/$(Cluster).$(Process).out
error                 = logs/$(Cluster).$(Process).err
log                   = logs/$(Cluster).log

+JobDurationCategory = "Short"

# Resources - smaller for test
request_cpus          = 1
request_memory        = 2 GB
request_disk          = 1GB

# Container
container_image       = osdf:///ospool/ap40/data/jacob.hauser/julia-itensors-1.10-20250810.sif

# Single test job
queue 1