universe              = vanilla
executable            = jobs/run.sh
arguments             = $(params)

# Send only what the job needs
transfer_input_files  = jobs, src, Project.toml, Manifest.toml, run.jl

should_transfer_files   = YES
when_to_transfer_output = ON_EXIT
transfer_output_files   = output

# Logs (on submit node)
output                = logs/test_$(Cluster).$(Process).out
error                 = logs/test_$(Cluster).$(Process).err
log                   = logs/test_$(Cluster).log

+JobDurationCategory = "Medium"

# Resources (minimal for test)
request_cpus          = 1
request_memory        = 1 GB
request_disk          = 2GB

# Use your container
container_image = /ospool/ap40/data/qia.wang/container.sif

# Test jobs from test params file
queue params from jobs/params_test.txt
