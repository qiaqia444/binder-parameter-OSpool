universe              = vanilla
executable            = run_adaptive.sh
arguments             = $(params)

# Send only what the job needs
transfer_input_files  = ../src, ../Project.toml, ../Manifest.toml, ../run_adaptive.jl

should_transfer_files   = YES
when_to_transfer_output = ON_EXIT
transfer_output_files   = output

# Logs (on submit node)
output                = logs/$(Cluster).$(Process).out
error                 = logs/$(Cluster).$(Process).err
log                   = logs/$(Cluster).log

+JobDurationCategory = "Medium"

# Resources (test - smaller requirements)
request_cpus          = 2
request_memory        = 2 GB
request_disk          = 2GB

# Use your container
container_image = /ospool/ap40/data/qia.wang/container.sif

# Test jobs with L=8,12,16 and reduced trials
queue params from params_adaptive_test.txt
